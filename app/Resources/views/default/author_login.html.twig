{% extends 'base-layout.html.twig' %}

{% block content %}

    {% if error %}
    <div class="alert alert-danger">
        {{ error.message | trans }}
    </div>
    {% endif %}

    <form class="form" method="post" action="{{ path('author_login_check') }}">
        <div class="form-group">
            <input type="text"
                   class="form-control"
                   name="_username"
                   placeholder="Votre identifiant"
                   value="{{ userName }}">
        </div>
        <div class="form-group">
            <input type="password"
                   class="form-control"
                   name="_password"
                   placeholder="Votre mot de passe">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Valider</button>
        </div>
    </form>

{% endblock %}

{% block title %}

{% endblock %}

